{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "references": [{ "path": "../../packages/ergo-lib" }]
}
